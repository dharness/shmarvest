<% content_for :title, "Sign Up for Shmarvest" %>

<div class="signup_page">
  <%= render "site_header" %>

  <div class="signup_page-content">

    <h2 class="signup_page-header">
      Start your free 30-day trial.
    </h2>

    <h3 class="signup_page-subheader">
      Fully functional. No credit card required
    </h3>

    <div class="signup_page-form">
      <%= form_for(
        resource, 
        as: resource_name, 
        url: registration_path(resource_name), 
        html: {class: "signup_page-formContent"},
        :validate => true) do |f| %>

        <%= devise_error_messages! %>

        <div class="field">
          <label>First Name</label>
          <%= f.text_field :first_name, :validate => true %>
        </div>

        <div class="field">
          <label>Last Name</label>
          <%= f.text_field :last_name, :validate => true %>
        </div>

        <div class="field">
          <label>Company Name</label>
          <%= f.text_field :company_name, :validate => true %>
        </div>

        <div class="field">
          <label>Email</label>
          <%= f.email_field :email, :validate => true %>
        </div>

        <div class="field">
          <label>Contact Phone</label>
          <%= f.text_field :contact_phone, autocomplete: "off", :validate => true %>
        </div>

        <div class="field">
          <label>Password</label>
          <%= f.password_field :password, autocomplete: "off", validate: false %>
        </div>

        <div class="field">
          <label>Web Address</label>
          <div class="signup_page-webAddressField">
            <%= f.text_field :web_address, autocomplete: "off", validate: true %>
            <span>.shmarvest.com</span>
          </div>
        </div>

        <div class="field">
          <label>Team Size</label>
          <%= f.select :team_size, ['Please select one...', '1', '2-4', '5-9', '10-49', '50+']%>
        </div>

        <div class="actions">
          <%= f.submit "Create My Account", class: "signup_page-signupButton" %>
        </div>
      <% end %>

      <div class="signup_page-fiveReasonsWrapper">
        <div class="signup_page-fiveReasons">
          <h5> 5 Reasons You'll Love Shmarvest </h5>
          <ol>
            <li>Fast to set up and easy to use</li>
            <li>Look professional with style</li>
            <li>Your data stays safe and secure</li>
            <li>Track and grow your business</li>
            <li>Real people to answer your questions</li>
          </ol>
        </div>
      </div>

    </div>
  </div>
</div>