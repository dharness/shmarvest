<% content_for :body_class, "signin-page" %>


<div class="signin-page__card">
  <h1 class="signin-page__heading">Shmarvest ID</h1>
  <h2 class="signin-page__caption">
    Sign in to a <b>Shmarvest</b> account
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email, autofocus: true, class: "signin-page__field", placeholder: "Email" %>
    <%= f.password_field :password, autocomplete: "off", class: "signin-page__field", placeholder: "Password" %>

    <div class="actions">
      <%= f.submit "Sign In", class: "signin-page__signin-button" %>
    </div>

    <div class="signin-page__signin-extras">
      <% if devise_mapping.rememberable? -%>
        <div class="signin-page__remember-me">
          <%= f.check_box :remember_me %>
          <label> Keep me signed in </label>
        </div>
      <% end -%>
      <a class="signin-page__forgot-password">Forgot your password?</a>
    </div>

  <% end %>
</div>