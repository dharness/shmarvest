<% content_for :body_class, "projects-page" %>
<% content_for :title, "Projects - " + request.subdomain.upcase %>
<%= render "partials/inner_site_header" %>
<%= render "sub_nav" %>

<div class="projects-page__contents">
    <div class="filter-projects">
        <button class="button-secondary filter-projects__dropdown-button" id="filter-projects-button">Archived projects (1)</button>
        <div class="filter-projects__dropdown filter-projects__dropdown--hidden">
            <ul>
                <% ["Active Projects (2)", "Budgeted Projects (0)", "Archived Projects (1)"].each do |option| %>
                    <li class="filter-projects__filter-option"><%= option %></li>
                <% end %>
            </ul>
        </div>
    </div>

    <table class="overview-table">
        <% @projects.each do |p| %>
            <tbody>
                <tr>
                    <th class="overview-table__name-column"><%= p[:client].upcase %></th>
                    <th>Budget</th>
                    <th class="overview-table__spent-column">Spent</th>
                    <th>Remaining</th>
                    <th>Costs</th>
                    <th></th>
                </tr>
                <tr class="overview-table__data-row">
                    <td><%= p[:name] %></td>
                    <td></td>
                    <td>58.96</td>
                    <td></td>
                    <td>$0.00</td>
                    <td class="projects-page__actions-wrapper">
                        <button class="button-secondary projects-page__actions-dropdown">Actions</button>
                    </td>
                </tr>
            </tbody>
        <% end %>
    </table>

    <div class="project-tips">
        <button class="button-secondary project-tips__quit-button"></button>
        <div class="project-tips__contents">
            <img height="151" src="https://cache.harvestapp.com/assets/onboarding/tip-projects@2x-5642856b94c3a8ced5a106149c820a37.png" />
            <div class="project-tips__header">
                <h2>You’re ready to take command, Captain!</h2>
                <p class="project-tips__description">
                    The more time tracked, the more useful this Projects section becomes. Up top you’ll see handy graphs, reports, and everything you’ll need for smooth sailing.
                </p>
                <a>Discover more with our Projects tour</a>
            </div>
        </div>
    </div>

</div>

<%= render "partials/inner_site_footer" %>